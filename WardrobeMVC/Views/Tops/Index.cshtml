@model IEnumerable<WardrobeMVC.Models.Top>

@{
    ViewBag.Title = "Tops";
}

<h2 id="categoryHeader">Tops</h2>

<div class="alert alert-info alert-dismissible" style="font-family: 'Source Sans Pro', sans-serif;">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
    All tops now <strong>25% off</strong>! Use promo code <strong>PUPTOP25</strong> at check out!
</div>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">

            <h1 id="itemName">
                @Html.DisplayFor(modelItem => item.Name)
            </h1>
            
            @*put this in photo field: ~/Content/images/fauxfurcoat.jpg*@
            @*put this in photo field: ~/Content/images/tshirt.jpg*@
            @*put this in photo field: ~/Content/images/strawberrysweater.jpg*@

            <p>
                <img style="height: 219px" src="@Url.Content(item.Photo)" class="img-thumbnail img-responsive"/>

            </p>
            
            <h4 id="propertiesText">
                Color: @Html.DisplayFor(modelItem => item.Color)
            </h4>
            
            <h4 id="propertiesText">
                Type: @Html.DisplayFor(modelItem => item.Type)
            </h4>
            
            <p id="propertiesText">
                @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
            </p>
        
        </div>
    }

</div>

<p id="propertiesText">
    @Html.ActionLink("Create New", "Create")
</p>